  <script>
    // Example: dynamically populate table (if you fetch from backend)
    const sampleData = [
      { date: '2025-10-04', employee: 'David', category: 'Lodging', amount: '$450', status: 'Approved' },
      { date: '2025-10-05', employee: 'Eva', category: 'Meals', amount: '$60', status: 'Pending' },
    ];

    function loadTable() {
      const tbody = document.getElementById('expenseTableBody');
      sampleData.forEach(item => {
        const tr = document.createElement('tr');
        [item.date, item.employee, item.category, item.amount, item.status].forEach(text => {
          const td = document.createElement('td');
          td.innerText = text;
          tr.appendChild(td);
        });
        tbody.appendChild(tr);
      })
    }

    loadTable();
  </script>
